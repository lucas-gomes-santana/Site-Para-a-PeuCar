{
    "rewrites": [
        {
            "source": "/assets/:path*",
            "destination": "/assets/:path*"
        },
        {
            "source": "/styles/:path*",
            "destination": "/styles/:path*"
        },
        {
            "source": "/scripts/:path*",
            "destination": "/scripts/:path*"
        },
        {
            "source": "/pages/:path*",
            "destination": "/pages/:path*"
        },
        {
            "source": "/",
            "destination": "/index.html"
        }
    ]
}