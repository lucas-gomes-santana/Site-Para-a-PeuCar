{
  "version": 2,
  "cleanUrls": true,
  "builds": [
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "pages/*.html", "use": "@vercel/static" },
    { "src": "styles/*.css", "use": "@vercel/static" },
    { "src": "scripts/*.js", "use": "@vercel/static" },
    { "src": "assets/*", "use": "@vercel/static" },
    { "src": "public/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/sitemap.xml", "dest": "/public/sitemap.xml" },
    { "src": "/sitemap-index.xml", "dest": "/public/sitemap-index.xml" },
    { "src": "/robots.txt", "dest": "/public/robots.txt" }
  ]
}
